<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ComboBox prefHeight="25.0" prefWidth="110.0" promptText="Audio device" />
            <Separator orientation="VERTICAL">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </Separator>
            <Slider max="6.0" maxWidth="1.7976931348623157E308" min="-40.0" prefHeight="38.0" prefWidth="156.0" showTickLabels="true" showTickMarks="true" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </bottom>
   <center>

   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu fx:id="settingsMenu" mnemonicParsing="false" text="Settings">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Search for song...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="F" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" text="Manage library...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <Menu mnemonicParsing="false" text="Skin">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#setStyle" text="Modena" />
                              <MenuItem mnemonicParsing="false" onAction="#setStyle" text="Caspian" />
                              <MenuItem mnemonicParsing="false" onAction="#setStyle" text="AquaFX" />
                          </items>
                        </Menu>
                    <MenuItem mnemonicParsing="false" text="Settings...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" text="Info" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Exit" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </right>
         <center>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu fx:id="currentSongMenu" mnemonicParsing="false" text="Song title">
                  <items>
                        <MenuItem mnemonicParsing="false" text="File information..." />
                        <MenuItem mnemonicParsing="false" text="Open file location..." />
                        <MenuItem mnemonicParsing="false" text="Add to library...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Delete file">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </center>
      </BorderPane>
   </top>
</BorderPane>
